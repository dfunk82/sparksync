<h2>
  Group Lesson Checkout
</h2>
<table class="stdnt">
	<tr>
		<th>F Name</th>
    <th>L Name</th>
    <th>School</th>
    <th>Progress</th>
    <th>Behavior</th>
    <th>Notes</th>
	</tr>
  <% @students.each do |student| %> 
    <tr>
      <%= form_for(@lesson, url: '/lessons') do |lesson| %>
        <td><%= student.first_name %></td>
        <td><%= student.last_name %></td>
        <td><%= student.school.name %></td>
        <%= lesson.hidden_field(student.first_name, value: student.first_name)%>
        <%= lesson.hidden_field(student.last_name, value: student.last_name)%>
        <%= lesson.hidden_field(student.school.name, value: student.school.name)%>
        <td class="cent"><%= lesson.number_field :progress, min: 1, max: 6, :style => "width:5em" %> </td>
        <td class="cent"><%= lesson.number_field :behavior, min: 1, max: 6, :style => "width:5em" %> </td>
        <td><%= lesson.text_field :notes %> </td>
        <% end %>
    </tr> 
  <% end %>
  <tr>
    <td colspan="6" style="text-align: center"><button style="width: 100%">Finish Lesson</button></td>
  </tr>
</table>
