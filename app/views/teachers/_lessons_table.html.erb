<table>
<tr>
<!-- post to /dateview/id where new date is stored, then redirect back here -->
<%= form_for @dateview, url: dateview_path(@dateview.id) do |f| %>
  <td>
  <%= f.label :start_date %>
  </td>
  <td>
  <%= f.text_field :s_date_formatted, class: "date" %>
  </td>
  <td>
  <%= f.label :end_date %>
  </td>
  <td>
  <%= f.text_field :e_date_formatted, class: "date"  %>
  </td>
  <td>
  Total hours
  </td>
  <td>
  <%= number_with_precision(@tot_hours, :precision => 2) || 0  %>
  </td>
  <td>
  <td><%= f.submit "Update Table", class: "updatetab" %></td>
  </td>
<% end %>
</tr>
</table>
<table>
	<tr>
    <th>
      <%= form_for("School", url: teachers_sort_path) do |f| %>
      <% f.submit "School", name: "sortcol" %>
      <% end %>
    </th>
		<th class="date">
      <%= form_for("Date", url: teachers_sort_path) do |f| %>
      <% f.submit "Date", name: "sortcol" %>
      <% end %>
    </th>
    <th colspan="2">
      <%= form_for("Student", url: teachers_sort_path) do |f| %>
      <% f.submit "Student", name: "sortcol" %>
      <% end %>
    </th>
    <th class="cent">
      <%= form_for("Progress", url: teachers_sort_path) do |f| %>
      <% f.submit "Progress", name: "sortcol" %>
      <% end %>
    </th>
    <th class="cent">
      <%= form_for("Behavior", url: teachers_sort_path) do |f| %>
      <% f.submit "Behavior", name: "sortcol" %>
      <% end %>
    </th>
    <th class="cent">
      <%= form_for("Instrument", url: teachers_sort_path) do |f| %>
      <% f.submit "Instrument", name: "sortcol" %>
      <% end %>
    </th>
    <th class="cent">
      <%= form_for("Books", url: teachers_sort_path) do |f| %>
      <% f.submit "Books", name: "sortcol" %>
      <% end %>
    </th>
    <th>
      Notes
    </th>
	</tr>
  <% @lessons.each do |lesson| %>
  <tr>
    <td><%= lesson['name'] %> </td>
    <td><%= lesson['time_in'].strftime("%Y-%m-%d") %></td>
    <td><%= lesson['first_name'] %> </td>
    <td><%= lesson['last_name'] %> </td>
    <td class="cent"><%= lesson['progress'] %> </td>
    <td class="cent"><%= lesson['behavior'] %> </td>
    <td class="cent">
      <%= if lesson['brought_instrument'] then "Y" else "N" end %>
    </td>
    <td class="cent">
      <%= if lesson['brought_books'] then "Y" else "N" end %> 
    </td>
    <td><%= lesson['notes'] %> </td>

  </tr>
  <% end %>
</table>
