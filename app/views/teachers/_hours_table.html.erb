<table>
<tr>
<!-- post to /dateview/id where new date is stored, then redirect back here -->
<%= form_for @dateview, url: dateview_path(@dateview.id) do |f| %>
  <td>
  <%= f.label :start_date %>
  </td>
  <td>
  <%= f.text_field :s_date_formatted, class: "date" %>
  </td>
  <td>
  <%= f.label :end_date %>
  </td>
  <td>
  <%= f.text_field :e_date_formatted, class: "date"  %>
  </td>
  <td>
  Total hours
  </td>
  <td>
  <%= number_with_precision(@tot_hours, :precision => 2) || 0  %>
  </td>
  <td>
  <td><%= f.submit "Update Table", class: "updatetab" %></td>
  </td>
<% end %>
</tr>
</table>
<table>
	<tr>
		<th>Date</th>
    <th>Logged In</th>
    <th>Logged Out</th>
    <th>Minutes</th>
	</tr>
  <% @logins.each do |login| %>
  <tr>
    <td><%= login.time_in.strftime("%Y-%m-%d") %></td>
    <td><%= login.time_in.strftime("%l:%M %p") %></td>
    <td><%= login.time_out.strftime("%l:%M %p") %></td>
    <td><%= number_with_precision((login.time_out - login.time_in)/60, :precision =>2) || 0 %></td>
  </tr>
  <% end %>
</table>
